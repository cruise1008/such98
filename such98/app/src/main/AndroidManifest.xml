<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.tgmerge.such98" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".custom.SuchApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_tooltip_text_white_48dp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginPageActivity"
            android:label="@string/title_activity_login_page"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".activity.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".activity.ShowBoardsActivity"
            android:label="@string/title_activity_show_boards" >
        </activity>
        <activity
            android:name=".activity.ShowTopicsActivity"
            android:label="@string/title_activity_show_topics" >
        </activity>
        <activity
            android:name=".activity.ShowPostsActivity"
            android:label="@string/title_activity_show_posts" >
        </activity>
        <activity
            android:name=".activity.IntentFilterActivity"
            android:label="@string/title_activity_intent_filter"
            android:noHistory="true" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="such98" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ViewImageActivity"
            android:label="@string/title_activity_view_image" >
        </activity>
        <activity
            android:name=".activity.ShowMessagesActivity"
            android:label="@string/title_activity_show_messages" >
        </activity>
    </application>

</manifest>
