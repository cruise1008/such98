<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.tgmerge.such98" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--
        	We will launch BaseDrawerActivity as launcher.
        	We will check if BaseDrawerActivity launch first time and open desired activity and set navigation item selected
	        edit: we won't
        <activity
            android:name=".BaseDrawerActivity"
            android:noHistory="true">
        </activity>
        -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginPageActivity"
            android:label="@string/title_activity_login_page"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".DisplayActivity"
            android:label="@string/title_activity_display" >
        </activity>
        <activity
            android:name=".ShowBoardsActivity"
            android:label="@string/title_activity_show_boards" >
        </activity>
        <activity
            android:name=".ShowTopicsActivity"
            android:label="@string/title_activity_show_topics" >
        </activity>
        <activity
            android:name=".ShowPostsActivity"
            android:label="@string/title_activity_show_posts" >
        </activity>
    </application>

</manifest>
