<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="1000dp"
    android:layout_margin="16dp"
    tools:context="me.tgmerge.such98.fragment.NewMessageDialogFragment"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background">

        <LinearLayout
            android:id="@+id/new_message_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/new_message_avatar_circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_circle_grey600_48dp"
                    android:alpha="0.4"/>

                <ImageView
                    android:id="@+id/new_message_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_account_outline_white_48dp"/>

            </FrameLayout>

            <EditText
                android:id="@+id/new_message_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_text"
                android:hint="发给username的消息"
                android:background="@android:color/transparent"/>


            <ImageView
                android:id="@+id/new_message_send"
                android:src="@drawable/ic_send_grey600_24dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:clickable="true"
                android:background="@drawable/background_transparent_touch_selector"/>

        </LinearLayout>

        <View
            android:id="@+id/view_divider_header"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_dividers"
            android:layout_below="@id/new_message_header"/>

        <EditText
            android:id="@+id/new_message_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint=""
            android:textColor="@color/text_text"
            android:textSize="16sp"
            android:text=""
            android:gravity="top"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:layout_below="@id/view_divider_header"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            style="@android:style/Widget.Holo.Light.ProgressBar"/>

    </RelativeLayout>
</ScrollView>