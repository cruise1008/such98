<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_circle_grey600_48dp"/>

            <ImageView
                android:id="@+id/img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_account_outline_white_36dp"
                android:layout_alignLeft="@id/img_circle"
                android:layout_alignTop="@id/img_circle"/>

            <TextView
                android:id="@+id/text_title"
                android:text="Nunc vehicula dapibus ipsum. Duis venenatis risus"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_text"
                android:paddingBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"/>

            <TextView
                android:id="@+id/text_authorInfo"
                android:text="Authorname @ 2015-04-12 12:04"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_title"
                android:layout_marginLeft="52dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/text_replyInfo"
                android:text="34 Clicked, 12 Replies"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_authorInfo"
                android:layout_marginLeft="52dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_divider_header"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_dividers"
            android:layout_below="@id/relativeLayout_header"/>

        <TextView
            android:id="@+id/text_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            android:textColor="@color/text_text"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider_header"/>

        <View
            android:id="@+id/view_divider_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_dividers"
            android:layout_below="@id/relativeLayout_header"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_below="@id/view_divider_content">

            <ImageView
                android:id="@+id/image_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_reply_grey600_24dp"
                android:clickable="true"
                android:background="@drawable/touch_background_selector"/>

            <ImageView
                android:id="@+id/image_quote"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_quote_grey600_24dp"
                android:clickable="true"
                android:background="@drawable/touch_background_selector"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>