<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:paddingTop="13dp"
    android:background="@drawable/background_touch_selector">

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_circle_grey600_48dp"
        android:alpha="0.6"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@drawable/ic_comment_text_outline_white_36dp"
        android:layout_alignLeft="@id/img_circle"
        android:layout_alignTop="@id/img_circle"/>

    <TextView
        android:id="@+id/text_title"
        android:text="Three-line item"
        android:textSize="16sp"
        android:textColor="@color/text_text"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/text_authorInfo"
        android:text="Secondary text lorem ipsum"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/text_title"/>

    <TextView
        android:id="@+id/text_lastPostInfo"
        android:text="amet, consectetur adipiscing"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/text_authorInfo"/>

    <Space
        android:layout_height="15dp"
        android:layout_width="match_parent"
        android:layout_below="@id/text_lastPostInfo" />

    <View
        android:id="@+id/view_divider_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_dividers"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72dp"/>

</RelativeLayout>
